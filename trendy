                { pregunta: '¿Puedo revender sus productos?', respuesta: '¡Claro que sí! De hecho, muchos de nuestros clientes compran para emprender. Te damos los mejores precios para que puedas obtener buenas ganancias revendiéndolos.' },
            ];
            function cambiarFondo() {
                document.body.style.background = fondos[(fondoIndex = (fondoIndex + 1) % fondos.length)];
            }

            function inicializarCarrusel(trackId, data, templateCallback) {
                const carruselTrack = document.getElementById(trackId);
                if (!carruselTrack) return;
                const container = carruselTrack.closest('.carrusel-container');
                const prevBtn = container.querySelector('.prev-btn');
                const nextBtn = container.querySelector('.next-btn');

                carruselTrack.innerHTML = '';
                data.forEach((item, index) => carruselTrack.appendChild(templateCallback(item, index)));
                
                let currentIndex = 0;
                const items = carruselTrack.querySelectorAll('.carrusel-item');
                const itemsCount = items.length;
                if (itemsCount === 0) return;
                
                const updateCarousel = () => {
                    const itemWidth = items[0].offsetWidth + 20;
                    const offset = -currentIndex * itemWidth;
                    carruselTrack.style.transform = `translateX(${offset}px)`;
                };
                
                if (nextBtn) {
                    nextBtn.addEventListener('click', () => {
                        currentIndex = (currentIndex + 1) % itemsCount;
                        updateCarousel();
                    });
                }
                
                if (prevBtn) {
                    prevBtn.addEventListener('click', () => {
                        currentIndex = (currentIndex - 1 + itemsCount) % itemsCount;
                        updateCarousel();
                    });
                }
                
                window.addEventListener('resize', updateCarousel);
                updateCarousel();
            }

            function showModal(data) {
                modalContenido.innerHTML = `
                    <img src="${data.imagen}" alt="${data.nombre}">
                    <h4>${data.nombre}</h4>
                    <p>${data.descripcion}</p>
                    <p><strong>Precio:</strong> ${data.precio}</p>
                    <p><strong>Precio Mayorista:</strong> ${data.precioMayorista}</p>
                `;
                modalProducto.style.display = 'block';
                overlay.style.display = 'block';
                document.body.classList.add('no-scroll');
            }

            function hideModal() {
                modalProducto.style.display = 'none';
                overlay.style.display = 'none';
                document.body.classList.remove('no-scroll');
            }

            const productoTemplate = (producto) => {
                const item = document.createElement('div');
                item.classList.add('carrusel-item');
                item.dataset.producto = JSON.stringify(producto);
                item.innerHTML = `
                    <img src="${producto.imagen}" alt="${producto.nombre}">
                    <div class="info-basica">
                        <p class="nombre-producto">${producto.nombre}</p>
                        <p class="precio-producto">${producto.precio}</p>
                    </div>
                `;
                item.addEventListener('click', () => {
                    const data = JSON.parse(item.dataset.producto);
                    showModal(data);
                });
                return item;
            };

            const socioTemplate = (socio) => {
                const item = document.createElement('div');
                item.classList.add('carrusel-item');
                item.innerHTML = `
                    <img src="${socio.imagen}" alt="Foto de ${socio.nombre}">
                    <div class="info-basica">
                        <p><strong>${socio.nombre}</strong></p>
                        <p>${socio.profesion}</p>
                    </div>
                    <div class="info-detallada">
                        <p>${socio.descripcion}</p>
                        <p>Contacto: ${socio.contacto}</p>
                    </div>
                `;
                item.addEventListener('click', () => {
                    document.querySelectorAll('.carrusel-item.expandido').forEach(otherItem => {
                        if (otherItem !== item) {
                            otherItem.classList.remove('expandido');
                        }
                    });
                    item.classList.toggle('expandido');
                });
                return item;
            };

            function inicializarFaq() {
                const faqAcordeon = document.getElementById('faq-acordeon');
                faqData.forEach((item) => {
                    const faqItem = document.createElement('div');
                    faqItem.classList.add('faq-item');
                    faqItem.innerHTML = `
                        <div class="faq-pregunta">
                            <span>${item.pregunta}</span>
                            <span>&#9660;</span>
                        </div>
                        <div class="faq-respuesta">${item.respuesta}</div>
                    `;
                    faqAcordeon.appendChild(faqItem);
                    const pregunta = faqItem.querySelector('.faq-pregunta');
                    pregunta.addEventListener('click', () => {
                        const respuesta = pregunta.nextElementSibling;
                        const flecha = pregunta.querySelector('span:last-child');
                        if (respuesta.style.display === 'block') {
                            respuesta.style.display = 'none';
                            flecha.innerHTML = '&#9660;';
                        } else {
                            document.querySelectorAll('.faq-respuesta').forEach(r => r.style.display = 'none');
                            document.querySelectorAll('.faq-pregunta span:last-child').forEach(f => f.innerHTML = '&#9660;');
                            respuesta.style.display = 'block';
                            flecha.innerHTML = '&#9650;';
                        }
                    });
                });
            }

            // Lógica de la secuencia de carga
            setTimeout(() => {
                cortinaTexto.style.opacity = '1';
            }, 500);
            setTimeout(() => {
                cortina.style.opacity = '0';
            }, 3000);
            cortina.addEventListener('transitionend', (e) => {
                if (e.propertyName === 'opacity' && cortina.style.opacity === '0') {
                    cortina.style.display = 'none';
                    document.body.style.overflow = 'auto'; // Habilita el scroll
                    contenido.style.display = 'block';
                    contenido.classList.add('mostrar');

                    setTimeout(cambiarFondo, 500);
                    setInterval(cambiarFondo, 2000);

                    inicializarCarrusel('carrusel-tienda', productos, productoTemplate);
                    inicializarCarrusel('carrusel-socios', socios, socioTemplate);
                    inicializarFaq();
                }
            });
            // Event listeners para el modal y overlay
            cerrarModalBtn.addEventListener('click', hideModal);
            overlay.addEventListener('click', hideModal);
        });
    </script>
</body>
</html>
